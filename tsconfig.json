  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "module": "CommonJS",
    "noImplicitAny": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}